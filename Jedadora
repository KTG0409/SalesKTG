    57: (315.000, 320.625),58:  (320.625, 326.250),
    59: (326.250, 331.875),60:  (331.875, 337.500),
    61: (337.500, 343.125),62:  (343.125, 348.750),
    63: (348.750, 354.375),64:  (354.375, 360.000)
