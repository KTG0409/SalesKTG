#-----------------IMAGE CONVERSION---------------------------------
def image_url_to_base64(url):
    try:
        response = requests.get(url)
        response.raise_for_status()
        return base64.b64encode(response.content).decode('utf-8')
    except Exception as e:
        print(f"Error loading image from {url}: {e}")
        return None


